# k8s_deployment.yaml - Consolidated Kubernetes Deployment
apiVersion: v1
kind: Namespace
metadata:
  name: flowdoc

---
apiVersion: v1
kind: Secret
metadata:
  name: flowdoc-secrets
  namespace: flowdoc
type: Opaque
stringData:
  # These should be managed by a secrets manager like Vault or AWS Secrets Manager
  # and injected into the cluster, not stored in git.
  DATABASE_URL: "postgresql://user:password@hostname:5432/flowdoc"
  JWT_SECRET_KEY: "a-very-secure-jwt-secret-key"
  # ... other secrets
  
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: flowdoc-api
  namespace: flowdoc
spec:
  replicas: 3
  selector:
    matchLabels:
      app: flowdoc-api
  template:
    metadata:
      labels:
        app: flowdoc-api
    spec:
      containers:
      - name: flask-api
        image: YOUR_ECR_REPO/flowdoc-api:latest # Replace with your image URI
        ports:
        - containerPort: 8000
        envFrom:
        - secretRef:
            name: flowdoc-secrets
        resources:
          requests:
            memory: "256Mi"
            cpu: "250m"
          limits:
            memory: "512Mi"
            cpu: "500m"
        securityContext:
          runAsNonRoot: true
          runAsUser: 1001 # Matches 'appuser' in Dockerfile
          allowPrivilegeEscalation: false
          capabilities:
            drop: ["ALL"]
        livenessProbe:
          httpGet:
            path: /api/health
            port: 8000
          initialDelaySeconds: 15
        readinessProbe:
          httpGet:
            path: /api/health
            port: 8000
          initialDelaySeconds: 5

---
apiVersion: v1
kind: Service
metadata:
  name: flowdoc-api-service
  namespace: flowdoc
spec:
  selector:
    app: flowdoc-api
  ports:
  - name: http
    port: 8000
    targetPort: 8000
  type: ClusterIP

---
apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: flowdoc-api-hpa
  namespace: flowdoc
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: flowdoc-api
  minReplicas: 3
  maxReplicas: 10
  metrics:
  - type: Resource
    resource:
      name: cpu
      target:
        type: Utilization
        averageUtilization: 75
